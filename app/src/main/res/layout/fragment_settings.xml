<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Admin Rights Toggle -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/admin_rights_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enable_admin_rights"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Camera Permission Toggle -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_camera_permission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enable_camera_permission"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/admin_rights_switch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Notification Permission Toggle -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_notification_permission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enable_notification_permission"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/switch_camera_permission"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Accessibility Permission Toggle -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_accessibility_permission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enable_accessibility_permission"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/switch_notification_permission"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Password Change Button -->
    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_password"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/switch_accessibility_permission"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Security Question Change Button -->
    <Button
        android:id="@+id/btn_change_security_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_security_question"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_change_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
