<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pin_setup_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="@string/set_your_pin"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <com.ob.pinlockviewapp.PinLockView
        android:id="@+id/pinLockViewSetup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:pin_length="4"
        app:button_size="64dp"
        app:border_enabled="true"
        app:button_spacing="16dp" />

    <Button
        android:id="@+id/save_pin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pinLockViewSetup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/save_pin"/>
</RelativeLayout>
